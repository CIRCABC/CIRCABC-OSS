	<macrodef name="delFromZip">
		<attribute name="zipFile"/>
		<element   name="selectors" implicit="true" optional="true"/>
		<sequential>
			<mkdir dir="${dir.target.tmp}"/>
			<unzip dest="${dir.target.tmp}" src="@{zipFile}"/>
			<delete file="@{zipFile}" verbose="true"/>
			<delete verbose="true">
				<fileset dir="${dir.target.tmp}">
					<selectors/>
				</fileset>
			</delete>
			<zip destfile="@{zipFile}" basedir="${dir.target.tmp}"/>
			<!--
			<delete dir="${dir.target.tmp}"/>
			-->
		</sequential>
	</macrodef>
	
	<property file="build_maven.properties" />
	<property file="build_maven.credential.properties" />
	<!--property file="./source/java/alfresco/extension/messages/circabc-version.properties" /-->
	<property file="./source/java/alfresco/extension/config/circabc-settings.properties" />

	<!-- load the svn task -->
	<!-- typedef resource="org/tigris/subversion/svnant/svnantlib.xml" classpathref="svnant.classpath" / -->
	<target name="-update-war" description="Main task that perform all necessary subtask to build a circabc war and ear">
	<echo message="################################ updating war ######################"/>
		<sequential>
			<antcall target="-update-version"/>
			<!-- later <antcall target="update-custom-values"/> -->
			<antcall target="remove-export-file"/>
			<antcall target="remove-libs"/>
			<antcall target="deploy-circabc-web-service"/>
			<antcall target="customise-war"/>
			<antcall target="zip"/>
			<antcall target="-perform-update"/>
			<antcall target="amps"/>
			<antcall target="delete-backup"/>
			<antcall target="ear"/>
		</sequential>
	</target>

	<target name="deploy-circabc-web-service" >
		<copy todir="${dir.target}/${war_file}/wsdl">
			<fileset dir="${dir.src.wsdl}" />
		</copy>
	</target>
	<target name="test-for-customisation" description="Test if user wants to override custom stuff">
		<condition property="customiseTargets">
			<equals arg1="${backend-customise-from-buildconfig}" arg2="true" />
		</condition>
	</target>
	<target name="customise-war" depends="test-for-customisation" if="customiseTargets">
		<echo>Including all custom files from buildconfig/${build.profile}/ ${backend-customise-from-buildconfig}</echo>
		<copy todir="${dir.target}/${war_file}" overwrite="true" >
			  <fileset dir="buildconfig/${build.profile}/" excludes="application.xml"/>
		</copy>
	</target>

	<target name="zip" description="Create AMP zip file">
		<zip destfile="${dir.target}/${war_file}.amp" update="no">
			<zipfileset  dir="${dir.target}/${war_file}" prefix="web" excludes="/**/.faces-config.xml.faceside, ${log4j.properties}" />
			<zipfileset  dir="${dir.target}/WebRoot" excludes="**/*.svn, ${log4j.properties}"/>
			<fileset dir="${dir.project}" includes="file-mapping.properties" excludes="${log4j.properties}"/>
			<fileset dir="${dir.project}" includes="module.properties" excludes="${log4j.properties}"/>
		</zip>
	</target>
	
	<target name="ear" description="create ear file">	
		<echo>Generate ear file</echo>
		<echo>weblogic.version=${weblogic.version}</echo>
		<copy file="${dir.target.circabc.war}" tofile="${dir.target}/circabc.war" overwrite="true"/>
		<echo>new UI war</echo>
		<copy file="../circabc-frontend-wrapper/target/circabc-frontend-wrapper-0.0.1.war" tofile="${dir.target}/new.war" overwrite="true"/>
		<echo>${dir.target.circabc.war} is ready</echo>
		<delete file="${dir.target.circabc.war}"/>
		<echo>Adding custom application.xml file</echo>
		<copy file="buildconfig/config1/application.xml" tofile="${dir.target}/${war_file}/META-INF/application.xml"/>
		<copy file="buildconfig/${build.profile}/application.xml" tofile="${dir.target}/${war_file}/META-INF/application.xml" overwrite="true" failonerror="false"/>
		<copy file="${dir.src.ear}/META-INF/weblogic-${weblogic.version}/weblogic-application.xml" tofile="${dir.target}/META-INF/weblogic-application.xml"/>
		<zip destfile="${dir.target}/${war_file}.ear" update="no">
			<zipfileset dir="${dir.src.ear}" excludes="**/*.svn,**/weblogic-*"/>
            <zipfileset dir="${dir.target}">
				<include name="circabc.war"/>
                <include name="new.war"/>
				<include name="META-INF/weblogic-application.xml"/>
            </zipfileset>
			<zipfileset dir="${dir.target}/${war_file}/META-INF" prefix="META-INF">
			</zipfileset>
		</zip>
	</target>
	
	<target name="-perform-update" description="Install amps to the generated war">
		
		<!-- this is a trick: like a depends but name is created dynamicly -->
		<copy file="${original.alfresco.war}" tofile="${dir.target.circabc.war}" overwrite="true"/>
		
		<echo>Remove log4j.properties from ${dir.target.circabc.war} (copy of original ${original.alfresco.war})</echo>
		
		<delFromZip zipFile="${dir.target.circabc.war}">
			<include name="@{log4j.properties}" />
		</delFromZip>
		
		<delFromZip zipFile="${dir.target.circabc.war}">
			<include name="**/log4j*.jar" />
		</delFromZip>
		
		<zip destfile="${dir.target.circabc.war}" update="true">
			<zipfileset file="${dir.src}/web/images/favicon.ico" prefix=""/>
		</zip>
		
		<echo>Remove log4j.properties from ${dir.target.circabc.war} (copy of original ${original.alfresco.war})</echo>
		
<!--		<echo>local var ${local.var}</echo> -->
		
		<delFromZip zipFile="${dir.target.circabc.war}">
			<!-- TODO: use the ${log4j.properties} variable  -->
			<include name="**/log4j.properties"/>
		</delFromZip>
		
	</target>
	
	<target name ="amps">
		
		<echo>Installing the SDK Demo AMP into WAR</echo>
		
		<exec executable="java">
			<arg value="-jar" />
			<arg value="../circabc-resources/circabc-alfresco-embedded/lib/alfresco-mmt.jar" />
			<arg value="install" />
			<arg value="${dir.target}/${war_file}.amp" />
			<arg value="${dir.target.circabc.war}" />
			<arg value="-nobackup" />
			<arg value="-force" />
		</exec>
		
		<echo>Installing the Support Tools AMP into the Alfresco WAR - Usage: http://[host]:[port]/s/enterprise/admin/ as Alfresco admin</echo>
		
		<exec executable="java">
			<arg value="-jar" />
			<arg value="../circabc-resources/circabc-alfresco-embedded/lib/alfresco-mmt.jar" />
			<arg value="install" />
			<arg value="${original.support-tools.amp}" />
			<arg value="${dir.target.circabc.war}" />
			<arg value="-nobackup" />
			<arg value="-force" />
		</exec>
		
	</target>
	
	<target name="delete-backup">
		<delFromZip zipFile="${dir.target.circabc.war}">
			<include name="**/*.bin" />
		</delFromZip>
	</target>
	<target name="-update-version" description="Update circabc-version.properties with values retrieved from git." >
		
		<property name="tmpfilename" value="tmpout.txt" /> 
		<delete file="${tmpfilename}" failonerror="false" /> 
		<exec executable="git" dir="${basedir}/../" output="${tmpfilename}"> 
			<arg line="rev-parse --short HEAD" /> 
		</exec> 
		<loadfile property="head" srcFile="${tmpfilename}"/>
		<delete file="${tmpfilename}" failonerror="false" />

		<propertyfile file="./source/java/alfresco/extension/messages/circabc-version.properties">
			<entry key="version.major" value="${version.major}" />
			<entry key="version.minor" value="${version.minor}" />
			<entry key="version.revision" value="${head}" />
			<entry key="version.label" value="CIRCABC" />
			<entry key="version.edition" value="${version.edition}" />
			<!--<entry key="scm.repository.path" value="${svnprops.info.entry.url}" />-->
			<entry key="build.date" type="date" value="now" pattern="MMM dd yyyy HH:mm:ss"/>
		</propertyfile>
		
		<propertyfile file="${dir.target}/${war_file}/WEB-INF/classes/alfresco/extension/messages/circabc-version.properties">

			<entry key="version.revision" value="${head}" />

		</propertyfile>
		
  	</target>
	
	<target name="test-include-export" description="Test if the property excludeExportFiles is present and settted">
		<condition property="excludeExportFiles">
			<or>
				<not>
					<isset property="includeExport"/>
				</not>
				<not>
					<equals arg1="${includeExport}" arg2="true" />
				</not>
			</or>
		</condition>
	</target>
	
