<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>
<!-- This file declares the Authentication beans (filters) to use by the new authentication subsystems with ECAS -->
<beans>
	
	<!-- WebDAV authentication -->
	
	<bean id="wdPassthruServers" class="org.alfresco.filesys.auth.PassthruServerFactory">
		<property name="localServer">
			<value>false</value>
		</property>
		<property name="server">
			<value>${webdav.passthru.server}</value>
		</property>
		<property name="domain">
			<value></value>
		</property>
		<property name="timeout">
			<value>5000</value>
		</property>
		<property name="offlineCheckInterval">
			<value>300</value>
		</property>
		<property name="protocolOrder">
			<value>${webdav.passthru.protocolOrder}</value>
		</property>
		<property name="nullDomainUseAnyServer">
			<value>true</value>
		</property>
	</bean>
	
	<bean id="wdAuthenticationComponent" class="org.alfresco.repo.security.authentication.ntlm.NTLMAuthenticationComponentImpl" parent="authenticationComponentBase">
		<property name="passthruServers">
			<ref bean="wdPassthruServers" />
		</property>
		<property name="personService">
			<ref bean="personService" />
		</property>
		<property name="nodeService">
			<ref bean="nodeService" />
		</property>
		<property name="transactionService">
			<ref bean="transactionComponent" />
		</property>
		<property name="guestAccess">
			<value>false</value>
		</property>
		<property name="defaultAdministratorUserNameList">
			<value></value>
		</property>
	</bean>
	
	<!-- Wrapped version to be used within subsystem -->
	<bean id="WDAuthenticationComponent" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="proxyInterfaces">
			<list>
				<value>org.alfresco.repo.security.authentication.AuthenticationComponent</value>
				<value>org.alfresco.repo.security.authentication.ntlm.NLTMAuthenticator</value>
			</list>
		</property>
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<ref bean="wdAuthenticationComponent" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="*">${server.transaction.mode.default}</prop>
			</props>
		</property>
	</bean>
	
	<!-- Authenticaton service for chaining -->
	<bean id="wdLocalAuthenticationService" class="org.alfresco.repo.security.authentication.AuthenticationServiceImpl">
		<property name="ticketComponent">
			<ref bean="ticketComponent" />
		</property>
		<property name="authenticationComponent">
			<ref bean="wdAuthenticationComponent" />
		</property>
		<property name="sysAdminParams">
			<ref bean="sysAdminParams" />
		</property>
	</bean>
