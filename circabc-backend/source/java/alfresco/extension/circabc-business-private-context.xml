			<ref bean="_applicationConfigManager" />
		</property>
	</bean>

	<bean id="_validationManager"
		class="eu.cec.digit.circabc.business.helper.ValidationManager">
		<property name="nodeService">
			<ref bean="nodeService" />
		</property>
		<property name="metadataManager">
