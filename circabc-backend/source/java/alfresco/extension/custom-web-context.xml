  <bean id="AsyncThreadPoolExecutor" class="org.alfresco.util.ThreadPoolExecutorFactoryBean">
	<property name="poolName">
   		<value>AsyncThreadPoolExecutor</value>
	</property>
	<property name="corePoolSize">
		<value>5</value>
	</property>
	<property name="maximumPoolSize">
		<value>40</value>
	</property>
	<property name="threadPriority">
		<value>5</value>
