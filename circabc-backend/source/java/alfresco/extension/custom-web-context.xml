<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>

   <!-- ===================================== -->
   <!-- Web Client Config Sources             -->
   <!-- ===================================== -->

  <bean id="webClientConfigSource" parent="repoUrlConfigSource" >
    <constructor-arg>
      <list>
			<!-- Overriding check-context-against-path is not working properly -->
            <!--value>classpath:alfresco/web-client-config.xml</value-->
            <!-- so we remove the original configuration file and replaced it by our config file -->
			<value>classpath:alfresco/extension/circabc-web-client-config.xml</value>
			
	        <!-- Added for WAI Circabc and must be called AFTER web-client-config.xml BUT BEFORE web-client-config-properties.xml -->
           	<value>classpath:alfresco/extension/circabc-web-client-config-properties-first.xml</value>

            <value>classpath:alfresco/web-client-config-dialogs.xml</value>
            <value>classpath:alfresco/web-client-config-wizards.xml</value>
            <value>classpath:alfresco/web-client-config-properties.xml</value>
            <value>classpath:alfresco/web-client-config-navigation.xml</value>
            <value>classpath:alfresco/web-client-config-wcm.xml</value>
            <value>classpath:alfresco/web-client-config-actions.xml</value>
            <value>classpath:alfresco/web-client-config-forum-actions.xml</value>

            <value>classpath:alfresco/web-client-config-wcm-actions.xml</value>
            <value>classpath:alfresco/web-client-config-workflow-actions.xml</value>
            <value>classpath:alfresco/extension/web-client-config-custom.xml</value>
            <value>jar:*!/META-INF/web-client-config-custom.xml</value>
            <value>workspace://SpacesStore/${spaces.company_home.childname}/${spaces.dictionary.childname}/app:webclient_extension/cm:web-client-config-custom.xml</value>

	        <!-- Added for Circabc -->
	        <value>classpath:alfresco/extension/circabc-web-client-config-navigation.xml</value>
	        <value>classpath:alfresco/extension/circabc-web-client-config-forum-actions.xml</value>
	        <value>classpath:alfresco/extension/circabc-web-client-config-actions.xml</value>
	        <value>classpath:alfresco/extension/circabc-web-client-config-admin-actions.xml</value>

	        <!-- Added for WAI Circabc -->
	        <value>classpath:alfresco/extension/circabc-wai-web-client-config-dialogs.xml</value>
	        <value>classpath:alfresco/extension/circabc-wai-web-client-config-wizards.xml</value>
	        <value>classpath:alfresco/extension/circabc-wai-web-client-config-actions.xml</value>
	        <value>classpath:alfresco/extension/circabc-wai-web-client-config-forum-actions.xml</value>
	        <value>classpath:alfresco/extension/circabc-wai-web-client-config-events-actions.xml</value>
	        <value>classpath:alfresco/extension/circabc-wai-web-client-config-workflow-actions.xml</value>
           	<value>classpath:alfresco/extension/circabc-web-client-config-properties.xml</value>
           	
	        <!-- renamed to circabc-web-client-config-custom.xml (Circabc name pattern) -->
	        <value>classpath:alfresco/extension/circabc-web-client-config-custom.xml</value>
      </list>
    </constructor-arg>
  </bean>

	<!-- 
	Migration 3.1 -> 3.4.6 - 08/12/2011 - Changed the XMLConfigService and UrlConfigSource classes location to Spring surf.
	 -->
    <bean id="rootPreferenceConfigService" class="org.springframework.extensions.config.xml.XMLConfigService" init-method="init" >
		<constructor-arg>
			<bean class="org.springframework.extensions.config.source.UrlConfigSource">
				<constructor-arg>
					<list>
						<value>classpath:alfresco/extension/customisation/root-preferences-config.xml</value>
					</list>
				</constructor-arg>
			</bean>
		</constructor-arg>
   </bean>

   <!--  -->
	<!-- 
	Migration 3.1 -> 3.4.6 - 08/12/2011 - Changed the XMLConfigService and UrlConfigSource classes location to Spring surf.
	 -->
   <bean id="navigationPreferencesConfigService" class="org.springframework.extensions.config.xml.XMLConfigService" init-method="init">
      <constructor-arg>
         <bean class="org.springframework.extensions.config.source.UrlConfigSource">
            <constructor-arg>
               <list>
                  <value>classpath:alfresco/extension/customisation/nav-default-config.xml</value>
               </list>
            </constructor-arg>
         </bean>
      </constructor-arg>
   </bean>


   <bean id="navigationConfigService" class="eu.cec.digit.circabc.repo.customisation.nav.NavigationConfigServiceImpl">
      <property name="configService">
         <ref bean="navigationPreferencesConfigService" />
      </property>
      <property name="webClientConfig">
         <ref bean="webClientConfigService" />
      </property>
      <property name="contentService">
         <ref bean="contentService" />
      </property>
      <property name="nodeService">
         <ref bean="nodeService" />
      </property>
   </bean>
   
